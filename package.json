{
  "name": "pwa-install-app",
  "version": "1.0.0",
  "license": "ISC",
  "title": "Detect native app and install with the help of PWA. If native app is already installed PWA will open the app. It also add PWA to home screen on `Windows/Linux/MacOS`",
  "scripts": {
    "lint": "tsc",
    "start": "next start",
    "dev": "npm run build-css && next",
    "build": "npm run build-css && next build",
    "pre-deploy": "yarn clean-cache && yarn build-css && yarn lint && yarn build",
    "clean-cache": "rm -rf .next && rm -rf node_modules/.cache",
    "build-css": "postcss tailwind.css -o index.css"
  },
  "dependencies": {
    "next": "latest",
    "preact": "^10.4.1",
    "preact-render-to-string": "^5.1.6",
    "react": "github:preact-compat/react#1.0.0",
    "react-device-detect": "^1.13.1",
    "react-dom": "github:preact-compat/react-dom#1.0.0",
    "react-icons": "^3.10.0",
    "react-ssr-prepass": "npm:preact-ssr-prepass@^1.0.1",
    "styled-components": "^5.1.1",
    "tailwindcss": "^1.4.1"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.1.2",
    "@types/node": "^13.13.4",
    "@types/react": "^16.9.48",
    "@types/styled-components": "^5.1.2",
    "autoprefixer": "^9.7.6",
    "cross-env": "^7.0.2",
    "cssnano": "^4.1.10",
    "husky": "^4.2.5",
    "next-compose-plugins": "^2.2.0",
    "postcss-cli": "^7.1.1",
    "typescript": "3.5.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn && yarn pre-deploy"
    }
  },
  "app": {
    "name": "Whatsapp",
    "pkgName": "com.whatsapp",
    "urlScheme": "whatsapp",
    "urlParams": "app"
  }
}
